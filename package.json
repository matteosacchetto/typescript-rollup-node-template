{
  "name": "typescript-rollup-node-template",
  "version": "0.5.0",
  "description": "Template for developing a NodeJS app using tpyescript and rollup",
  "main": "dist/app.mjs",
  "type": "module",
  "scripts": {
    "lint": "npx tsc --noemit && npx eslint src test",
    "dev": "npx rollup -c -w",
    "prebuild": "rm -rf dist",
    "build": "npx rollup -c",
    "pretest": "npm run lint",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepack": "npm run build",
    "doc": "npx typedoc"
  },
  "author": "Matteo Sacchetto",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-eslint": "^9.0.1",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-run": "^3.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "rollup": "^3.2.5",
    "rollup-plugin-esbuild": "^4.10.2",
    "rollup-plugin-node-externals": "^5.0.2",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.20",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=16.15",
    "npm": ">=8.5.5"
  }
}
